{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/auto-commit.sh",
            "platforms": ["linux", "macos"]
          },
          {
            "type": "command", 
            "command": "cmd /c \".claude\\auto-commit.bat\"",
            "platforms": ["windows"]
          }
        ]
      }
    ]
  }
}